<% include ../partials/header %>
<div class="container form-size">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment on <%= announcement.name %> Page</h1>
        <div class="col-xs-10 col-xs-push-1 col-sm-8 col-sm-push-2">      
            <form action="/announcements/<%= announcement._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
<!-- 
                <% if (!loggedInUser){ %>
                    <div class="form-group"> 
                        <input class="form-control" type="text" name="comment[author]" placeholder="author">
                    </div>
                    <% } %> -->

                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>

            </form>
            <a href="/announcements/<%= announcement._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
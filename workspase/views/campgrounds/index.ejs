<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welvome to the YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create your own campground!</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="../<%= camp.image.imagename + '.' +  camp.image.extension %>" alt="<%= camp.name %>" title="<%= camp.name %>">
                    <div class="caption"></div>
                    <h4>
                        <%= camp.name %>
                    </h4>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>

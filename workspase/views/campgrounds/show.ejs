<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="lead">YelpCamp</div>
            <div class="list-group">
                <li class="list-group-item active">Item 1</li>
                <li class="list-group-item">Item 2</li>
                <li class="list-group-item">Item 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>" title="<%= campground.name %>" alt="<%= campground.name %>">
                <div class="caption">
                    <h4 class="pull-right">$<%= campground.cost %>/night</h4>
                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <% if(loggedInUser && campground.author.id && campground.author.id.equals(loggedInUser._id)) {%>
                        <div class="auth-buttons campground-buttons">
                            <a href="/campgrounds/<%= campground._id %>/edit"><p class="pull-right btn btn-warning">Edit</p></a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="delete-form">
                                <input type="submit" class="pull-right btn btn-danger" value="Delete">
                            </form>
                        </div>
                    <% } %>

                    <p>
                        <i>Created By
                            <span class="campground-username"> <%= campground.author.username %></span>
                        </i>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-default" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <srong><%= comment.author.username %></srong>
                            <% if(comment.author.id === null) { %>
                                <span class="not-logged-in-user">Anonim User</span>
                            <% } %>
                            <span class="pull-right">10 days ago</span>

                            <% if(typeof loggedInUser !== 'undefined' && loggedInUser && loggedInUser._id && (comment.author.id && comment.author.id.equals(loggedInUser._id) || campground.author.id && campground.author.id.equals(loggedInUser._id))) {%>
                                <div class="pull-right auth-buttons comment-buttons">
                                    <% if(typeof loggedInUser !== 'undefined' && loggedInUser && loggedInUser._id && comment.author.id && comment.author.id.equals(loggedInUser._id)) { %>
                                        <a href="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>/edit" class="btn btn-warning">Edit</a>
                                    <% } %>
                                    <form action="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST" class="delete-form">
                                        <input type="submit" class="btn btn-danger" value="Delete">
                                    </form>
                                </div>
                            <% } %>
                            
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>
            </div>

        </div>
        
    </div>
    <a href="/campgrounds">Go Back</a>

</div>

<% include ../partials/footer %>